require 'hoe'
require './lib/units-time/version.rb'

Hoe.spec 'units-time' do

  self.version = UnitsTime::VERSION

  self.summary = "units-time - units of time (in epoch time) incl. seconds, minutes, hours, days, weeks, fortnights, years and more"
  self.description = summary

  self.urls    = ['https://github.com/s6ruby/units-time']

  self.author  = 'Gerald Bauer'
  self.email   = 'wwwmake@googlegroups.com'

  # switch extension to .markdown for gihub formatting
  self.readme_file  = 'README.md'
  self.history_file = 'CHANGELOG.md'

  self.extra_deps = []

  self.licenses = ['Public Domain']

  self.spec_extras = {
    required_ruby_version: '>= 2.3'
  }

end
